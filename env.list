# COMPANY INFO - Enter your company name
PLATFORM_COMPANY_NAME=QADASHBOARD

# CORS - Enter your domain or IP address
CORS_ALLOWED_ORIGIN=127.0.0.1,localhost

# HOST CONF
EUREKA_HOST=qa-dashboard-eureka-server
UAA_HOST=qa-dashboard-uaa

# DATABASE
PLATFORM_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/dashboardDB
ADDONS_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/addonsDB
DEVTEAM_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/devteamDB
GITWISER_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/gitwiserDB
UAA_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/uaaDB
NOTIFIER_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/notifierDB
DASHBOARD_BASE_MONGODB_URI=mongodb://qa-dashboard-mongo:27017/dashboardDB

# SSL CONFIGURATION
# Put your SSL certificates on the default directory: ~/docker/volume/qa-dashboard/certs
# Set the parameter 'true' and write the file names (first.cer,second.crt)
SSL_ENABLED=false
SSL_CERT_FILE_NAMES=
